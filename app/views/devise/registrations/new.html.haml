.account-wrapper
  .account-wrapper__container
    .account-wrapper__container__logo
      %h2 新規登録
    .account-wrapper__container__or
      %p 
        or
      = render "devise/shared/links"
    .acount-wrapper__container__form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          .field__label
            = f.label :nickname, 'ニックネーム'
          .fileld__input
            = f.text_field :nickname, placeholder: '例 たろう', autofocas: true, autocomplete: "off"
        .field
          .field__label
            = f.label :email, 'メールアドレス'
          .fileld__input
            = f.email_field :email, placeholder: '例 sample@gmil.com', autofocus: true, autocomplete: "email"
        .field
          .field__label
            = f.label :password, 'パスワード'
            - if @minimum_password_length
              %em
                ※4文字以上の半角英数字
          .fileld__input
            = f.password_field :password, autocomplete: "new-password"
        .field
          .field__label
            = f.label :password_confirmation, '確認用メールアドレス'
          .fileld__input
            = f.password_field :password_confirmation, autocomplete: "new-password"
        .actions
          .actions__btn
            = f.submit "新規登録"
      
