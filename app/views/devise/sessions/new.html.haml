.account-wrapper
  .account-wrapper__header
    .account-wrapper__header__logo
      %h2 
        Homework App
  .account-wrapper__container
    .account-wrapper__container__logo
      %h2 
        ログイン
    .account-wrapper__container__or
      %p 
        or
      = render "devise/shared/links"
    .account-wrapper__container__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          .field__label
            = f.label :email, 'メールアドレス'
          .field__input
            = f.email_field :email, placeholder: '例 sample@gmil.com', autofocus: true, autocomplete: "email"
        .field
          .field__label
            = f.label :password, 'パスワード'
          .field__input
            = f.password_field :password, autocomplete: "current-password"
        - if devise_mapping.rememberable?
          .field-remember
            .field-remember__check
              = f.check_box :remember_me
            .field-remember__label
              = f.label :remember_me, 'アカウントを保存する'
        .actions
          .actions__btn
            = f.submit "ログイン"
  .account-wrapper__footer
    .account-wrapper__footer__logo
      %p 
        Homework App 2020   
