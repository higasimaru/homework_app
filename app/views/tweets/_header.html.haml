.header
  .header__logo
    %p
      HomeWork App
  .header__search-box
    %input.header__search-box__input-text{placeholder: 'コメントテキスト検索', type: :text}
    %button.header__search-box__btn{type: 'button'}
      = icon('fa', 'hand-pointer', class: 'header__search-box__hand')
      %p 一覧へ戻る

  .header__name-box
    .header__name-box__name
      - if user_signed_in?
        = link_to edit_user_path(current_user.id), class: 'btn' do
          %p 
            ようこそ
            = current_user.nickname 
            さん  
      -else
        %p ようこそ ゲスト さん
            
  .header__log-status
    %button.header__log-status__log-status-btn{type: :submit}
      - if user_signed_in?
        = link_to destroy_user_session_path, method: :delete, class: 'btn' do      
          %span
            ログアウト
      - else
        = link_to new_user_session_path do 
          %span
            ログイン